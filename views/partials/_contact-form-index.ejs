<div class="container container-full-height container-contact" id="contact-form">
  <form class="form-horizontal" action="/contact" method="post" role="form">
    <fieldset>
      <div class="col-xs-12 col-sm-6 offset-sm-3">
        <h2 class="heading-thin text-center">Contact</h2>
        <div class="controls">
          <div class="form-group">
            <label class="control-label" for="name">Name &#42;</label>
            <div>
              <input id="name" name="name" type="text" placeholder="Your name" class="form-control" required="required">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label" for="email">Email &#42;</label>
            <div>
              <input id="email" name="email" type="text" placeholder="Your email" class="form-control" required="required">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label" for="message">Message &#42;</label>
            <div>
              <textarea class="form-control" id="message" name="message" placeholder="Enter your message here" rows="3" required="required"></textarea>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label" for="verification">Enter the word <code>send</code> &#42;</label>
            <input id="verification" name="verification" type="text" placeholder="Verification" class="form-control">
          </div>
          <div class="form-group">
            <div class="text-center">
              <input id="formlocation" name="formlocation" type="hidden" value="homepage">
              <button type="submit" class="btn btn-primary btn-lg" title="Submit contact form">
                <img src="/images/icon-email.svg" class="icon-contact" alt="email icon"> &nbsp; Submit
              </button>
            </div>
          </div>
        </div>
      </div>
    </fieldset>
  </form>
</div>
